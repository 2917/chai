@import 'nib'
@import 'fez'
@import 'scrollbar'

global-reset()
fez-reset()


primary = #FAF4E8 //#F2EBD8 // background
accent = darken(primary, 60%)//#90BFC9 //darken(#fff, 15%)
headers = #784942 //449B33 // BD9462
ghbg = #81A27D//E8DEAD

buttonbig = #A40802 //A32931
buttonsmall = #575639
accentbg = #A32931

@import 'layout'

body
  font 13px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif
  background-color #fff

body.index
  background-color #FAF4E8

h1, h3, h4
  font-family "Redressed", "Helvetica Neue", Helvetica, Arial, sans-serif
 

a
  color buttonbig
  text-decoration none

h1
  color headers
  font-size 3em
  > a
    color headers

h2
  font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 22px

h3
  color accent
  font-size 2em
  margin-top 1em
  clearfix()
  > a
    color accent

h4
  font-size 1.5em

pre
  background #fff

em
  font-style italic
  font-weight bold

.box-wrap
  margin-bottom 50px



header
  background lighten(#E9CE99, 30%)
  padding-top 30px
  padding-bottom 30px
  .header-wrap
    position relative
    .installation
      .site-description
        color #784942
        margin-bottom 1.2em
        margin-top 15px
        font-size 22px
        font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
      .card
        clearfix()
        border-radius 5px 
        background-color #FAF4E8 // #F2EBD8 
        box-shadow 0px 0px 1px #000
        height 270px
        position relative
        .card-inner
          clearfix()
          margin 20px
          font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
          color #666
          h1
            font-size 40px
            margin-top -10px
            margin-bottom 0px
            color #30759C
            span.version
              font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
              font-size 12px
              color #666//#30759C
              background-color #fff //#FAF4E8 
              border-radius 5px
              padding 3px 6px
              margin-left 10px
              display inline-block
              position relative
              top -7px
          h2
            color #30759C
            font-size 25px
            margin-top -5px
            font-family "Redressed", "Helvetica Neue", Helvetica, Arial, sans-serif
            small
              font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
              position relative
              bottom 1px
              margin-left 15px
              color #666
              font-size 13px
              a
                margin-left 15px
          .download-banner
            margin-top 30px
            .description
              margin-bottom 10px
            .command
              display inline-block
              background-color #fff
              float left
              font-family "Bitstream Vera Sans Mono", "Courier", monospace
              width 210px
              line-height 50px
              text-align center
              border-radius 3px
              box-shadow 0px 0px 1px #666
            .button
              font-size 18px
              display inline-block
              float left
              width 210px
              text-align center
              line-height 50px
              background-color #30759c //90BFC9
              border-radius 3px
              color #fff
            .dsp-left
              margin-right 10px
            .dsp-right
              margin-left 10px
          .tech-links
            text-align center
            position absolute
            bottom 20px
            width 440px
    .callouts
      .call
        a
          display block
          position relative
          clearfix()
          min-height 100px
          padding 20px
          span
            display block
            width 100px
            height 100px
            background-color lighten(#000, 90%)
            position absolute
            left 20px
            top 20px
            border-radius 5px
          big
            display block
            margin-left 130px
            margin-top 13px
            font-family "Redressed", "Helvetica Neue", Helvetica, Arial, sans-serif
            font-size 24px
          small
            display block
            margin-left 130px
            font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
            color #784942
          &:hover
            box-shadow inset 0px 0px 1px #666

section#home
  clearfix()

  .rowInside
    margin-top 30px

  .hrline
    border-top 1px #F0DDB8 solid
    margin-bottom 30px

  h2
    margin-bottom 0px
    line-height 30px
    color #784942

  pre
    padding 0px
    margin 0px
    background none
    border-radius none
    border none

  article
    .wrap
      clearfix()
      padding 20px

    .more
      display block
      float right
      margin-top 20px
      font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
      clear both

    h3
      margin-top 0px
      font-size 20px
      color #30759C
      &::after
        clear none !important

    p
      font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif

  article.subscribe
    margin-top 30px
    .rowInside
      margin-top 0px
    h3
    p
      margin-bottom 0px

  article.desc
    margin-bottom 30px

  article.cplugs
  article.vplugs
  article.pplugs
  article.dplugs
    background-color #fff
    border-radius 5px

    span.img
      background lighten(#000, 95%)
      display block
      margin-bottom 20px
      height 80px

  article.code
  article.subscribe
  article.github
  article.community
    background-color #fff
    border-radius 5px

    span.img
      background lighten(#000, 95%)
      display block
      float right
      width 100px
      margin-left 20px
      height 120px

section#content
  margin-top 50px
  margin-bottom 50px
  min-height 350px

  h1
    padding-top 10px
    margin-top 85px
  h2
    padding-top 15px
    margin-top 25px
  p
    code
      padding 3px 5px
      background darken(primary, 5%)

section#home
  .site-description
    color lighten(#000, 40%)
    margin-bottom 1.2em
    font-size 22px
    font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
    
nav#primary
  border-top 5px solid #E9CE99
  background-color #fff
  .logo
    h1
      margin-bottom 0px
      line-height 70px
      a
        display block
        float left
  .navlist
    ul
      list-style none
      float right
      li
        display block
        float left
        font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
        font-size 18px
        a
          display block
          line-height 70px
          padding 0px 25px

nav#pages
  display none
  ul
    list-style none
    margin-bottom 50px
    li
      margin-left 0px
      margin-right 12px
      text-align right
      &.keepcase
        a
          text-transform none !important
      &.header
        font-weight bold
      a
        color lighten(#000, 40%)
        font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
        text-transform lowercase
        font-size 14px
        &:hover
          text-decoration underline

footer
  margin-top 30px
  padding-top 30px
  padding-bottom 30px
  background-color #30759C
  font-family "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
  a
    color #FAF4E8
  .branding
    h3
      margin-top 0px

@import 'code'
